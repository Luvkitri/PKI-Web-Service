{{#if table}}

<div class="wrapper">
    <div class="table-wrapper">
        <div class="title">
            <h2>Manage <b>{{tableName}}</b></h2>
        </div>

        <div class="controls">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#insertModal">Insert record</button>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#removeModal">Remove record</button>
            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#editModal">Edit record</button>
        </div>

        <table id="example" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    {{#each table.[0].dataValues}}
                    <th scope="col">{{@key}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each table}}
                <tr>
                    {{#each this.dataValues}}
                    <td>{{this}}</td>
                    {{/each}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{> _modals}}
{{else}}
<p>Pick a table or execute query. Results will be seen here.</p>
{{/if}}